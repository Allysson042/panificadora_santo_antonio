<h1>Usuários</h1>

<div class="table-responsive"></div>
<table class="table table-striped table-bordered table-hover">
  <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Função</th>
        <th colspan="3"></th>
      </tr>
    </thead>
   <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.name%></td>
        <td><%=user.email%></td>
        <td><%=user.role%></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_registration_path(user) %></td>
        <td><%= link_to 'Apagar', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
    <% end %>
  </tbody>
  </table>
</div>



