<h1>Clientes</h1>

<div class="table-responsive"></div>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>CEP</th>
      <th>Cidade</th>
      <th>Bairro</th>
      <th>Logradouro</th>
      <th>NÃºmero</th>
      <th>Complemento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.address.zip_code %></td>
        <td><%= customer.address.city %></td>
        <td><%= customer.address.district %></td>
        <td><%= customer.address.road %></td>
        <td><%= customer.address.number %></td>
        <td><%= customer.address.complement %></td>
        <td><%= link_to 'Mostrar', customer %></td>
        <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
        <td><%= link_to 'Apagar', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
