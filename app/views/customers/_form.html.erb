<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Name %>
    <%= form.text_field :name, id: "name" %>
  </div>

  <div class="field">
    <%= form.label :Telefone %>
    <%= form.text_field :phone, id: "phone" %>
  </div>

  Endereço:
  <%= form.fields_for :address do |form_address| %>
    <div class="field">
    <%= form_address.label :CEP %>
    <%= form_address.number_field :zip_code, id: "zip_code" %>
  </div>

  <div class="field">
    <%= form_address.label :Cidade %>
    <%= form_address.text_field :city, id: "city" %>
  </div>

  <div class="field">
    <%= form_address.label :Bairro %>
    <%= form_address.text_field :district, id: "district" %>
  </div>

  <div class="field">
    <%= form_address.label :Logradouro %>
    <%= form_address.text_field :road, id: "road" %>
  </div>

  <div class="field">
    <%= form_address.label :Número %>
    <%= form_address.number_field :number, id: "number" %>
  </div>

  <div class="field">
    <%= form_address.label :Complemento %>
    <%= form_address.text_field :complement, id: "complement" %>
  </div>
  <% end %>
  

  <div class="actions">
    <%= form.submit id:"submit", value:"Confirmar"%>
  </div>
<% end %>
