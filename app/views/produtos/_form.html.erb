<%= form_with(model: produto, local: true) do |form| %>
  <% if produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(produto.errors.count, "error") %> prohibited this produto from being saved:</h2>

      <ul>
        <% produto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Product_Name %>
    <%= form.text_field :nome, id: "nome" %>
  </div>

  <div class="field">
    <%= form.label :Description %>
    <%= form.text_area :descrição, id:"descricao" %>
  </div>

  <div class="field">
    <%= form.label :Price %>
    <%= form.text_field :preco, id: "preco" %>
  </div>

  <div class="field">
    <%= form.label :validity %>
    <%= form.date_select :validade, id:"validade" %>
  </div>
  <h2> Estoque </h2>
  <%= form.fields_for :estoque do |estoque| %>
    <div class="field">
      <%= estoque.label :product_quantity %>
      <%= estoque.number_field :quantidadeProduto, id:"quantiProduto" %>
    </div>
    <div class="field">
      <%= estoque.label :valorTotalEstoque %>
      <%= estoque.number_field :valorTotalEstoque, id:"valorTotalEstoque" %>
    </div>


  <% end %>

  <div class="actions">
    <%= form.submit id:"submit" %>
  </div>
<% end %>
